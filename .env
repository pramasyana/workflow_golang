# Workflow Approval System - Environment Configuration
# Copy this file to .env and fill in your values

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8080
APP_ENV=development

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=workflow_approval
DB_CHARSET=utf8
DB_PARSE_TIME=true
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=300

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24
JWT_ISSUER=workflow-approval-system

# Logging Configuration
LOGGING_LEVEL=debug
LOGGING_FORMAT=json

